html, body
  font-family $font-default
  font-size 16px
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0
  font-weight normal

a, a:hover
  text-decoration none

ul
  padding 0
  margin 0

li
  list-style-type none

*, *::before, *::after
  -webkit-box-sizing inherit
  -moz-box-sizing inherit
  box-sizing inherit

img
  max-width 100%
  height auto

input:focus
  outline 0

input
  border 0
  margin 0
  padding 0